<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    tools:context=".ProfileActivity"
    android:background="#f3f3f3"
    android:fitsSystemWindows="true"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@drawable/menu_background"
        android:layout_weight="1"
        android:gravity=""
        android:layout_alignParentBottom="true"
        android:layout_marginTop="20dp"
        android:elevation="25dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/search_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/icon_not_selected_test"
            android:layout_gravity="center">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/search_button_icon"
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:src="@drawable/not_selected_search"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/profile_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/icon_not_selected_test">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/profile_button_icon"
                    android:layout_width="30dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:src="@drawable/not_selected_profile2"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/favorites_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/icon_not_selected_test">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/favorites_button_icon"
                    android:layout_width="30dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:src="@drawable/not_selected_favorites2"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cart_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/icon_not_selected_test">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/cart_button_icon"
                    android:layout_width="30dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:src="@drawable/not_selected_cart2"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/profile_pic"
            android:layout_width="fill_parent"
            android:layout_height="160dp"
            tools:ignore="MissingConstraints"
            android:gravity="center">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/profile_pic"
                tools:ignore="MissingConstraints" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/profile_div"
            android:layout_width="fill_parent"
            android:layout_height="350dp"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/profile_pic"
            android:orientation="vertical"
            tools:ignore="MissingConstraints"
            android:layout_marginTop="5dp">

            <LinearLayout
                android:layout_width="380dp"
                android:layout_height="1dp"
                android:background="@drawable/list_stroke"
                android:layout_marginBottom="5dp"/>
            <TextView
                android:layout_width="380dp"
                android:layout_height="20dp"
                android:text="Name"
                android:textSize="15sp"
                android:layout_marginStart="15dp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/profile_name"
                android:layout_width="380dp"
                android:layout_height="25dp"
                android:text="Marios Ritsos"
                android:textSize="20sp"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="5dp"/>
            <LinearLayout
                android:layout_width="380dp"
                android:layout_height="1dp"
                android:background="@drawable/list_stroke"
                android:layout_marginBottom="5dp"/>


            <TextView
                android:layout_width="380dp"
                android:layout_height="20dp"
                android:text="Userame"
                android:textSize="15sp"
                android:layout_marginStart="15dp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/profile_username"
                android:layout_width="380dp"
                android:layout_height="25dp"
                android:text="marios_rts"
                android:textSize="20sp"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="5dp"/>
            <LinearLayout
                android:layout_width="380dp"
                android:layout_height="1dp"
                android:background="@drawable/list_stroke"
                android:layout_marginBottom="5dp"/>

            <TextView
                android:layout_width="380dp"
                android:layout_height="20dp"
                android:text="Password"
                android:textSize="15sp"
                android:layout_marginStart="15dp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="380dp"
                android:layout_height="25dp"
                android:text="********"
                android:textSize="20sp"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="5dp"/>
            <LinearLayout
                android:layout_width="380dp"
                android:layout_height="1dp"
                android:background="@drawable/list_stroke"
                android:layout_marginBottom="5dp"/>

            <TextView
                android:layout_width="380dp"
                android:layout_height="20dp"
                android:text="Address"
                android:textSize="15sp"
                android:layout_marginStart="15dp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/profile_address"
                android:layout_width="380dp"
                android:layout_height="25dp"
                android:text="Gkanogianni 14, Kifisia, Athens"
                android:textSize="20sp"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="5dp"/>
            <LinearLayout
                android:layout_width="380dp"
                android:layout_height="1dp"
                android:background="@drawable/list_stroke"
                android:layout_marginBottom="5dp"/>

            <TextView
                android:layout_width="380dp"
                android:layout_height="20dp"
                android:text="Card"
                android:textSize="15sp"
                android:layout_marginStart="15dp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/profile_card"
                android:layout_width="380dp"
                android:layout_height="25dp"
                android:text="Mastercard, *******8944"
                android:textSize="20sp"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="5dp"/>
            <LinearLayout
                android:layout_width="380dp"
                android:layout_height="1dp"
                android:background="@drawable/list_stroke"
                android:layout_marginBottom="5dp"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@+id/profile_div"
            tools:ignore="MissingConstraints"
            android:gravity="center">

            <TextView
                android:text="Log out"
                android:onClick="pressLogout"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:textSize="24dp"
                android:textColor="#f7f7f7"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@drawable/log_out_button_background"
                tools:ignore="MissingConstraints" />
        </LinearLayout>




    </androidx.constraintlayout.widget.ConstraintLayout>




</RelativeLayout>